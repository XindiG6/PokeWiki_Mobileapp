<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#FFCB05" />
            <gradient android:angle="-90" android:startColor="#FFCB05" android:endColor="#FFCB05"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#FFCB05"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#FFCB05" />
            <gradient android:angle="-90" android:startColor="#FFCB05" android:endColor="#6376B8" />
        </shape>
    </item>
</selector>