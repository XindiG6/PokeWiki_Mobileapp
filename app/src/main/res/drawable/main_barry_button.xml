<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#CC0000" />
            <gradient android:angle="-90" android:startColor="#CC0000" android:endColor="#CC0000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#CC0000" />
            <solid android:color="#CC0000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#CC0000" />
            <gradient android:angle="-90" android:startColor="#CC0000" android:endColor="#400000" />
        </shape>
    </item>
</selector>